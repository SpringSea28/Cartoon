<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/status_bar_height"
    tools:context=".my.ui.fragment.NoLoginFragment" >

    <include
        android:id="@+id/title"
        layout="@layout/level_2_lay_title"/>

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background="#E6E6E6"/>

    <TextView
        android:id="@+id/tv_young"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="27sp"
        android:textColor="@color/main_text_col"
        android:text="@string/setting_young"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_young"
        app:layout_constraintStart_toEndOf="@id/tv_young"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/setting_young_not_start"
        android:background="@drawable/bg_4_ffd8d8d8"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_young">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="1、"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="2、"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="3、"/>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_enter"
        style="@style/BtnStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:text="@string/setting_young_enter"/>
</androidx.constraintlayout.widget.ConstraintLayout>