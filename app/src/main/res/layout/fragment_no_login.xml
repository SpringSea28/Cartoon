<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".my.ui.NoLoginFragment" >

    <View
        android:layout_width="match_parent"
        android:layout_height="243dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/main_color_pink"/>
    
    <ImageView
        android:id="@+id/img_header"
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="71dp"
        android:src="@mipmap/user_iamge_70px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_header"
        app:layout_constraintBottom_toBottomOf="@id/img_header"
        app:layout_constraintStart_toEndOf="@id/img_header"
        android:layout_marginStart="12dp"
        android:textSize="21dp"
        android:textColor="@color/white"
        android:text="@string/my_login"/>

    <ImageView
        android:id="@+id/img_set"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/set_up"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="163dp"
        android:background="@drawable/bg_22_top_white"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <RelativeLayout
            android:id="@+id/rl_brown"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/browse"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="@string/my_brown"/>

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/list_arrow_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/home_classify_content_item_divider_line_col"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_about_us"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/about_us"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="@string/my_about_us"/>

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/list_arrow_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/home_classify_content_item_divider_line_col"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_privacy"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/protocol"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="@string/my_privacy"/>

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/list_arrow_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/home_classify_content_item_divider_line_col"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/opinion"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="@string/my_feedback"/>

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/list_arrow_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/home_classify_content_item_divider_line_col"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingStart="13dp"
            android:paddingEnd="15dp">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/updata"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text="@string/my_version"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img_new"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_version"
                app:roundPercent="1"
                android:background="@color/main_color_pink"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/img_in_arrow"
                android:textSize="15sp"
                android:textColor="@color/main_text_col"
                android:text=""/>

            <ImageView
                android:id="@+id/img_in_arrow"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/list_arrow_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/home_classify_content_item_divider_line_col"/>
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>