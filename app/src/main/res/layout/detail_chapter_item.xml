<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".home.ui.HomeFragment"
    android:paddingBottom="12dp">
    
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_cover"
        android:layout_width="106dp"
        android:layout_height="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="8dp"/>

    <TextView
        android:id="@+id/tv_chapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_cover"
        app:layout_constraintEnd_toEndOf="@id/img_cover"
        app:layout_constraintTop_toBottomOf="@id/img_cover"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/main_text_col"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_cover"
        app:layout_constraintEnd_toEndOf="@id/img_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_chapter"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:textSize="10sp"
        android:textColor="#8D8D8D"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""/>



</androidx.constraintlayout.widget.ConstraintLayout>